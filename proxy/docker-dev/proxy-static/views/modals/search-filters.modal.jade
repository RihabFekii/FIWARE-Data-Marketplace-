.modal.fade(ng-controller="SearchFilterCtrl as filterVM")
  .modal-dialog
    .modal-content
      .modal-header
        .h4
          strong #{ __("Search filters") }
      .modal-body
        .form-group.no-user-select(ng-show="filterVM.exists('status')")
          .h4
            strong #{ __("Status") }
          hr
          .item-checkbox(ng-repeat="(key, value) in filterVM.getStatusStates()")
            label.checkbox
              .track
                input(type="checkbox", value="{{ value }}", ng-checked="filterVM.checkboxChecked('status', value)", ng-click="filterVM.toggleCheckbox('status', value)")
                i.fa.fa-lg
              | {{ value }}
        .form-group.no-user-select(ng-show="filterVM.exists('role')")
          .h4
            strong #{ __("Role") }
          hr
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.role")
                i.fa.fa-lg
              | #{ __("All") }
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.role", value="Owner")
                i.fa.fa-lg
              | #{ __("Owner") }
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.role", value="Seller")
                i.fa.fa-lg
              | #{ __("Seller") }
        .form-group.no-user-select(ng-show="filterVM.exists('type')")
          .h4
            strong #{ __("Type") }
          hr
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.type")
                i.fa.fa-lg
              | #{ __("All") }
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.type", value="Single")
                i.fa.fa-lg
              | #{ __("Single") }
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.type", value="Bundle")
                i.fa.fa-lg
              | #{ __("Bundle") }
        .form-group.no-user-select(ng-show="filterVM.exists('sort')")
          .h4
            strong #{ __("Sort By") }
          hr
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.sort")
                i.fa.fa-lg
              | #{ __("Last Updated") }
          .item-radio
            label.radio
              .track
                input(type="radio", ng-model="filterVM.filters.sort", value="name")
                i.fa.fa-lg
              | #{ __("Name") }
      .modal-footer
        a.btn.btn-default.z-depth-1(data-dismiss="modal")
          span.item-text #{ __("Close") }